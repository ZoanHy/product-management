extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    h1(class="mt-4 mb-4") Thêm danh mục sản phẩm

    form(
        action=`${prefixAdmin}/products-category/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for='title') Tiêu đề
            input(
                type="text" 
                class="form-control" 
                id="title" 
                name="title" 
            )
        div(class="form-group")
            label(for='parent_id') Danh mục cha
            input(
                type="text" 
                class="form-control" 
                id="parent_id" 
                name="parent_id" 
            )
        div(class="form-group")
            label(for='desc') Mô tả
            textarea(
                class="form-control" 
                id="desc" 
                name="description" 
                rows="5"
                textarea-mce
            ) 
        div(class="form-group" upload-image)
            label(for='thumbnail') Ảnh
            input(
                type="file" 
                class="form-control-file" 
                id="thumbnail" 
                name="thumbnail" 
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            label(for='position') Vị trí
            input(
                type="text" 
                class="form-control" 
                id="position" 
                name="position" 
                placeholder="Tự động tăng"
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio" 
                class="form-check-input" 
                id="availabilityStatus" 
                name="availabilityStatus" 
                value="In Stock"
                checked
            )
            label(for="availabilityStatus") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio" 
                class="form-check-input" 
                id="availabilityStatus" 
                name="availabilityStatus" 
                value="Out of Stock"
            )
            label(for="availabilityStatus") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới

    script(src="/admin/js/product.js")
    script(src="https://cdn.tiny.cloud/1/yd5tqvp1h8skfdizsmmjnek26dqzy5vdrtl0k3koyjn7b3wj/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous")
    script(src="/admin/js/tinymce-config.js")
