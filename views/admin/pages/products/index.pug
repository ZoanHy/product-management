extends ../../layouts/default.pug

block main 
    h1 Danh sách sản phẩm

    table.table.table-hover.table-sm 
        thead 
            tr 
                th STT 
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động

        tbody
            each item, index in products
                tr
                    td= index + 1
                    td 
                        img(
                            src=item.thumbnail,
                            alt=item.title,
                            width="100px",
                            height="auto"
                        )
                    td= item.title
                    td $#{item.price.toFixed(0)}$
                    td 
                        if item.availabilityStatus === "In Stock"
                            a(href="#!" class="badge text-bg-success") Còn hàng
                        else
                            a(href="#!" class="badge text-bg-danger") Hết hàng
                    td 
                        button(class="btn btn-warning btn-sm") Sửa
                        button(class="btn btn-danger btn-sm ml-2") Xóa